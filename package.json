{
  "name": "mishka",
  "version": "0.1.0",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.1.x",
    "browser-sync": "2.24.x",
    "gulp": "3.9.x",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-sass": "^4.0.1",
    "gulp-csso": "3.0.1",
    "gulp-rename": "1.4.0",
    "gulp-imagemin": "4.1.0",
    "gulp-webp": "3.0.0",
    "gulp-svgstore": "6.1.1",
    "run-sequence": "2.2.1",
    "del": "3.0.0",
    "gulp-posthtml": "3.0.4",
    "posthtml-include": "1.2.0",
    "stylelint": "9.5.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint 'sass/**/*.scss' --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp build",
    "start": "npm run build && gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.html",
    "*.json",
    "*.js",
    "js/**/*.js",
    "img/**/*.svg",
    "sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.2"
  },
  "dependencies": {
    "normalize.scss": "^0.1.0"
  }
}
